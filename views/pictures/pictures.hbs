<div class='body-button'>
  <div>
    <p> Hello, {{this.name}}!</p>
    <p> We are glade to see you!</p>
  </div>
  {{#if grandMother}}
  <div>
    <p> Let's add some new pictures!</p>
  </div>
  <div>
    <button id="instruction" class="waves-effect waves-light btn">instruction</button>
    <button id="add-pic" class="waves-effect waves-light btn">add pic</button>
  </div>
  {{else}}
  {{#if pictures}}
  <div>
    <p> Your grandma has a great collection!</p>
  </div>
  {{else}}
  <div>
    <p> Ops! Your grandma's collection is empty...</p>
  </div>
  {{/if}}
  {{/if}}
</div>
{{!-- {{#each pictures}} --}}
<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div id={{id}} class="card-image">
        <img src={{src}}>
        <button id='open-pic' class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></button>
      </div>
      <div class="card-action">
        <a href="">read</a>
        {{#if grandMother}}
        <a href="">delete</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{!-- {{/each}} --}}
